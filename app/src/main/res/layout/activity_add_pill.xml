<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_AddPill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/lightGreen"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Pill"
            android:textAllCaps="true"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:fontFamily="@font/storytime"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pill Name"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

        <Spinner
            android:id="@+id/spinnerForPill"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:drawable/btn_dropdown"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days To Take The Pill"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="@font/storytime"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUN"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/storytime"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/storytime"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout> <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout> <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WED"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout> <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout> <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout> <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>


            <Spinner
                android:id="@+id/spinnerForHour"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:drawable/btn_dropdown"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/shapelogin"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Picture"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/storytime"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/pill_IBT_Camera"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/shapelogin"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/pill_IBT_Gallery"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gallery"
                    android:background="@drawable/shapelogin"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/newPill_BTN_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGreen"
            android:fontFamily="@font/storytime"
            android:text="confirm"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>







    </LinearLayout>



