<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/lightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT CHARACTER"
            android:fontFamily="@font/candaral"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/Dialog_IMGB_chatacter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/other2"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM COLOR"
                android:fontFamily="@font/candaral"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/dialog_SPR_color"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:drawable/btn_dropdown"
                />

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_BTN_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/candaral"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="CONFIRM"
            android:backgroundTint="@color/lightRed"/>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_BTN_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/candaral"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="I WANT TO LOG OUT"
            android:textSize="20sp"
            android:backgroundTint="@color/lightOrange"/>

    </LinearLayout>



    </LinearLayout>