<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Calander">

    <LinearLayout
        android:id="@+id/upLinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/lightGreen">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calander_LBL_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/storytime"
                    android:text="Tal Shavit"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/calander_LBL_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/storytime"
                        android:text="Sunday"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/calander_LBL_intDayMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/storytime"
                        android:text="30.01"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/female_IMG_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:background="@drawable/profile"
                android:scaleType="fitCenter" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calander_LBL_sunday"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="SUN"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_mon"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="MON"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_tue"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_wed"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="WED"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_thr"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="THR"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_fri"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="FRI"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/calander_LBL_sat"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="SAT"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:backgroundTint="@color/white"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="@color/gray">

        <FrameLayout
            android:id="@+id/calander_LAY_cyrcle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

