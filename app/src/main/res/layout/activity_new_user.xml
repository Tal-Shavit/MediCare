<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_newUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/lightGreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Info"
            android:textAllCaps="true"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:fontFamily="@font/storytime"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <View
                android:layout_width="30dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <View
                android:layout_width="30dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <View
                android:layout_width="30dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/newUser_TXT_firstName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:hint="FIRST NAME HERE"
                android:inputType="textPersonName|textCapWords"
                android:textSize="23sp"
                android:fontFamily="@font/storytime"
                android:background="@drawable/shapelogin"/>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/newUser_TXT_lastName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:hint="LAST NAME HERE"
                android:inputType="textPersonName|textCapWords"
                android:textSize="23sp"
                android:fontFamily="@font/storytime"
                android:background="@drawable/shapelogin"/>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/newUser_TXT_email"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:hint="EMAIL"
                android:inputType="textEmailAddress|textCapWords"
                android:textSize="23sp"
                android:fontFamily="@font/storytime"
                android:background="@drawable/shapelogin"/>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/newUser_TXT_passwrd"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:hint="PASSWORD HERE"
                android:inputType="textPassword"
                android:textSize="23sp"
                android:fontFamily="@font/storytime"
                android:background="@drawable/shapelogin"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/white">

        <Button
            android:id="@+id/newUser_BTN_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:text="confirm"
            android:textColor="@color/black"
            android:fontFamily="@font/storytime"
            android:textSize="30sp"
            android:backgroundTint="@color/lightGreen"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/lightBlue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gender"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/storytime"/>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/newUser_BTN_male"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="MALE"
                android:textSize="20sp"
                android:fontFamily="@font/storytime"
                android:textColor="@color/black"
                android:background="@drawable/shapelogin"/>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/newUser_BTN_female"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="FEMALE"
                android:textSize="20sp"
                android:fontFamily="@font/storytime"
                android:textColor="@color/black"
                android:background="@drawable/shapelogin"/>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/newUser_BTN_other"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="OTHER"
                android:textSize="20sp"
                android:fontFamily="@font/storytime"
                android:textColor="@color/black"
                android:background="@drawable/shapelogin"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/newUser_SPR_spinner"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:drawable/btn_dropdown"
                 />

<!--            android:fontFamily="@font/storytime"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="20sp"-->

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storytime"
                android:text="system color"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>


    </LinearLayout>





</LinearLayout>